font-5 = Termsynu:size=8:antialias=false;2
font-6 = DroidSansFallback:size=8;3


modules-left = i3
modules-center = xwindow
fixed-center = true
modules-right = cpu memory

tray-position = right
tray-padding = 4
tray-transparent = true
tray-background = ${bar/top.background}

[module/xwindow]
